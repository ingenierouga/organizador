<script type="text/javascript">

function validateEmpleado()
{
 
   if( document.input.nombre.value == "" )
   {
   	 document.getElementById("Error").innerHTML="<li>Error: Nombre del empleado es necesario para crear un nuevo empleado</li>";
     //alert( "Nombre del empleado es necesario para crear un nuevo empleado" );
     document.input.nombre.focus() ;
     document.input.nombre.style.border = "solid 1px red";
     return false;
   }else
   {
   	document.input.nombre.style.border = "solid 1px black";
   }
   
   if( document.input.correo_electronico.value == "" )
   {
   	 document.getElementById("Error").innerHTML="<li>Error: Correo Electronico es necesario para crear un nuevo empleado</li>";
     //alert( "Correo Electronico es necesario para crear un nuevo empleado" );
     document.input.correo_electronico.style.border = "solid 1px red";
     document.input.correo_electronico.focus() ;
     return false;
   }else
   {
   	document.input.correo_electronico.style.border = "solid 1px black";
   }
      
   var emailID = document.input.correo_electronico.value;
   atpos = emailID.indexOf("@");
   dotpos = emailID.lastIndexOf(".");
   if (atpos < 1 || ( dotpos - atpos < 2 )) 
   {
       //alert("Por favor escriba un Correo Electronico valido")
       document.getElementById("Error").innerHTML="<li>Por favor escriba un Correo Electronico valido</li>";
       document.input.correo_electronico.style.border = "solid 1px red";
       document.input.correo_electronico.focus() ;
       return false;
   }else
   {
   	document.input.correo_electronico.style.border = "solid 1px black";
   }
   
   if( document.input.rfc.value == "" )
   {
     //alert( "RFC es necesario para crear un nuevo empleado" );
     document.getElementById("Error").innerHTML="<li>RFC es necesario para crear un nuevo empleado</li>";
     document.input.rfc.style.border = "solid 1px red";
     document.input.rfc.focus() ;
     return false;
   }else
   {
   	document.input.rfc.style.border = "solid 1px black";
   }
   
   if( document.input.empresa_id.value == "0" )
   {
     //alert( "Empresa es necesaria para crear un nuevo empleado" );
     document.getElementById("Error").innerHTML="<li>Empresa es necesaria para crear un nuevo empleado</li>";
     document.input.empresa_id.style.border = "solid 1px red";
     document.input.empresa_id.focus() ;
     return false;
   }else
   {
   	document.input.empresa_id.style.border = "solid 1px black";
   }
   
   if( document.input.password.value == "" )
   {
     //alert( "Password es necesario para crear un nuevo empleado" );
     document.getElementById("Error").innerHTML="<li>Password es necesario para crear un nuevo empleado</li>";
     document.input.password.style.border = "solid 1px red";
     document.input.password.focus() ;
     return false;
   }else
   {
   	document.input.password.style.border = "solid 1px black";
   }
   
   if( document.input.confirmation_password.value == "" )
   {
     //alert( "Password es necesario para crear un nuevo empleado" );
     document.getElementById("Error").innerHTML="<li>Password es necesario para crear un nuevo empleado</li>";
     document.input.confirmation_password.style.border = "solid 1px red";
     document.input.confirmation_password.focus() ;
     return false;
   }else
   {
   	document.input.confirmation_password.style.border = "solid 1px black";
   }
   
   if( document.input.password.value != document.input.confirmation_password.value )
   {
     //alert( "Tu Password y su Confirmacion no concuerdan" );
     document.getElementById("Error").innerHTML="<li>Tu Password y su Confirmacion no concuerdan</li>";
     document.input.password.style.border = "solid 1px red";
     document.input.confirmation_password.style.border = "solid 1px red";
     document.input.password.focus() ;
     return false;
   }else
   {
   	document.input.password.style.border = "solid 1px black";
   	document.input.confirmation_password.style.border = "solid 1px black";
   }
   

   
   
   
   return( true );
}

</script>
<h1>Nuevo Empleado</h1>

<div id="Error"></div>

<form name="input" action="/empleados/create" method="get" onsubmit="return(validateEmpleado());">
<table>
		<tr> 
			<td>Nombre:</td> 
			<td><input type="text" name="nombre" ></td> 
		<tr>
 		<tr>
 			<td>Correo Electronico: </td> 
 			<td><input type="text" name="correo_electronico" > </td> 
 		<tr>

		<tr>
 			<td>RFC:</td> 
 			<td><input type="text" name="rfc" ></td> 
 		<tr>
 
        <tr>
 			<td>Empresa: </td> 
 			<td><select name="empresa_id">
			    <option hidden="true" value='0'>Seleccione una empresa</option>
			    <%@empresas.each do |empresa| %>
	

			    	<option value=<%= empresa.id %> > <%= empresa.nombre %> </option>
			    <% end %>
			</select>
			</td>
 		<!--	<td><input type="text" name="empresa_id" ></td> --> 
 		<tr>

		<tr>
 			<td>Password: </td> 
 			<td><input type="password" name="password" ></td> 
 		<tr>

		<tr>
 			<td>Confirmacion Password:</td> 
 			<td> <input type="password" name="confirmation_password" ></td> 
 		<tr>
 


</table>
<input type="submit" value="Submit">
</form>